import javax.swing.JOptionPane;

import Cozinha.Cozinha;

public class Fogao extends Cozinha {
	
	
	
	public Fogao() {
		super();
		this.quantidade++;
		setQuantidade(quantidade);
		definirVoltagem();
	}

	public void definirVoltagem() {
		this.voltagem =Integer.parseInt(JOptionPane.showInputDialog("Qual é a voltagem dele?"));
		this.setVoltagem(voltagem);
		if(voltagem == 110) {
			consumo = 11;
			this.setConsumo(consumo);
		}
		else {
			consumo = 22;
		this.setConsumo(consumo);
		}
	}
	
	public void calculoGasto() {
		consumoobj = getQuantidade() * getConsumo();
		this.setConsumoobj(consumoobj);
	}

	public void mostrarObj() {
		JOptionPane.showMessageDialog(null, "Fogão"+"\t"+"Voltagem: " + getVoltagem() +  "\n" + "Quantidade: " + getQuantidade() +  "\n"
											+ "Consumo do produto: " + getConsumoobj() );
	}


}
